{
  "name": "@asafarim/sidebar",
  "version": "1.2.0",
  "type": "module",
  "description": "A collapsible sidebar component for React applications",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "all": "pnpm i && pnpm run build",
    "prepare": "npm run build",
    "demo": "pnpm build && cd demo && pnpm run build && pnpm dev",
    "dev": "rollup -c -w",
    "gp": "cd demo && gh-pages -d dist && echo 'Deployed to GitHub Pages'",
    "pregp": "pnpm run build && echo 'Deploying to GitHub Pages'"
  },
  "keywords": [
    "asafarim",
    "react",
    "sidebar",
    "navigation",
    "collapsible",
    "ui"
  ],
  "author": "AliSafari",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "rollup": "^4.0.0",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-postcss": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "files": [
    "dist",
    "demo",
    "sidebar-demo-screenshot.png",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AliSafari-IT/sidebar.git" 
  },
  "homepage": "https://alisafari-it.github.io/sidebar",
  "bugs": {
    "url": "https://github.com/AliSafari-IT/sidebar/issues"
  }
}